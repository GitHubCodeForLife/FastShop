<!-- Login -->

<section class="section section-xxl bg-default text-md-center py-0">
  <div class="box-transform-wrap context-dark ">
    <div class="container container-login wow fadeInLeft" data-wow-delay=".15s">
      <h3 class="text-spacing-25 text-transform-none">LOGIN</h3>
      {{#if message}}
      <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
        <p>{{message}}</p>
      </div>
      {{/if}}
      <form class="rd-form" method="post">
        <div class="row row-20 gutters-20">
          <div class="col-md-12">
            <div class="form-wrap">
              <input class="form-input" id="email" type="text" name="email" data-constraints="@Required" required>
              <label class="form-label" for="email">Email</label>
            </div>
          </div>
          <div class="col-md-12">
            <div class="form-wrap">
              <input class="form-input" id="password" type="password" name="password" data-constraints="@Required"
                required>
              <label class="form-label" for="password">Password</label>
            </div>
          </div>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <button class="button button-secondary button-winona" type="submit">Login</button>
        </div>
        <div class="d-flex justify-content-center mt-5">
          <p>Don't have an account? <a href="./signup">Sign up.</a></p>
        </div>

        <div class="d-flex justify-content-center mt-5">
          <a href="/forget-password"><button class="btn btn-sm btn-light">Forget Password?</button></a>
        </div>

      </form>
    </div>
    <div class="box-transform" style="background-image: url(images/bg-login.jpg);"></div>
  </div>

</section>
{{#if verifyEmailSuccess}}
<div class="d-flex justify-content-center alert">
  <div id="snackbar">Verify Email Success, now you can login in your account ...
    <i class="fa fa-check" style="font-style: normal; color: green" aria-hidden="true"></i>
    <a href="#" style="color: #8ab4f8;" data-dismiss="alert"> Close</a>
  </div>
</div>
{{/if}}
{{#if resetPasswordSuccess}}
<div class="d-flex justify-content-center alert">
  <div id="snackbar">Password was reset, now you can login into your account ... <i class="fa fa-check"
      style="font-style: normal; color: green" aria-hidden="true"></i>
    <a href="#" style="color: #8ab4f8;" data-dismiss="alert"> Close</a>
  </div>
</div>
{{/if}}
<!-- Javascript-->
<script src="js/core.min.js"></script>
<script src="js/script.js"></script>
