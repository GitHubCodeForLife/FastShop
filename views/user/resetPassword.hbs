<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


<div class="container mt-5 mb-5 d-flex justify-content-center" style="height: 400px;">
    <div class="col-md-7 col-lg-8">
        <form action="" method="POST">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4>Reset password</h4>
                        {{#if errors}}
                        {{#each errors}}
                        <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
                            <p>{{this}}</p>
                        </div>
                        {{/each}}
                        {{/if}}
                        <hr><br>
                        <p>Change password for Fast Shop</p><br>
                        <div class="row row-20 gutters-20 d-flex justify-content-start">
                            <div class="col-md-6">
                                <div class="form-wrap">
                                    <input class="form-input" id="password" type="password" name="password"
                                        data-constraints="@Required" required value="{{infor.password}}">
                                    <label class="form-label" for="password">Password</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-wrap">
                                    <input class="form-input" id="retype_password" type="password"
                                        name="retype_password" data-constraints="@Required" required
                                        value="{{infor.retype_password}}">
                                    <label class="form-label" for="retype_password">Retype Password</label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer">
                        <button class="btn btn-info bnt-sm me-5" type="submit">Change password</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Javascript-->
<script src="/js/core.min.js"></script>
<script src="/js/script.js"></script>