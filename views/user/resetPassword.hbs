<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<section class="section section-xxl bg-default text-md-center py-0">
    <div class="box-transform-wrap context-dark ">
        <div class="container container-signup wow fadeInLeft" data-wow-delay=".15s">
            <h3 class="text-spacing-25 text-transform-none">RESET PASSWORD</h3>
            {{#if errors}}
            {{#each errors}}
            <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
                <p>{{this}}</p>
            </div>
            {{/each}}
            {{/if}}
            <hr><br>
            <p>Make sure it's at least 15 characters OR at least 8 characters including a number and a
                lowercase letter. Learn more.</p><br>
            <form class="rd-form" method="post">
                <div class="row row-20 gutters-20">
                    <div class="col-md-6">
                        <div class="form-wrap">
                            <input class="form-input" id="password" type="password" name="password"
                                data-constraints="@Required" required>
                            <label class="form-label" for="password">Password</label>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-wrap">
                            <input class="form-input" id="retype_password" type="password" name="retype_password"
                                data-constraints="@Required" required>
                            <label class="form-label" for="retype_password">Retype Password</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button class="button button-secondary button-winona" type="submit">Signup</button>
                </div>

            </form>
        </div>
        <div class="box-transform" style="background-image: url(/images/bg-login.jpg);"></div>
    </div>
</section>
<!-- Javascript-->
<script src="/js/core.min.js"></script>
<script src="/js/script.js"></script>