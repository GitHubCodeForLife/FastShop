<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<div class="container mt-5">
    <div class="row mb-3">
        <div class="col-md-4 themed-grid-col"><img src="https://picsum.photos/200" class="img-thumbnail" alt=""></div>
        <div class="col-md-8 themed-grid-col text-left jumbotron ">
            <div class="pb-3">
                <form class="needs-validation" novalidate method="POST">
                    <div class="row g-3 j">
                        <h4 class="mb-3">Change password</h4><br>
                        <p class="text-warning">Remember password is at least 6 characters.</p>
                        {{#if errors}}
                        {{#each errors}}
                        <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
                            <p class="d-flex justify-content-center">{{this}}</p>
                        </div>
                        {{/each}}
                        {{/if}}
                        <div class="col-sm-12">
                            <label for="">Current password</label>
                            <input type="password" class="form-control" placeholder="Current password"required
                                name="current_password">
                        </div>
                        <div class="col-sm-12">
                            <label for="">New password</label>
                            <input type="password" class="form-control" placeholder="New password" required
                                name="new_password">
                        </div>

                        <div class="col-sm-12">
                            <label for="">Retype password</label>
                            <input type="password" class="form-control" placeholder="Retype password" required
                                name="retype_password">
                        </div>

                        <div class="col d-flex justify-content-center">
                            <button class="btn btn-primary btn-sm" type="submit">Save</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Javascript-->
<script src="js/core.min.js"></script>
<script src="js/script.js"></script>
