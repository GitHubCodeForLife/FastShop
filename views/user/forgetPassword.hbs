<section class="section section-xxl bg-default text-md-center py-0">
    <div class="box-transform-wrap context-dark ">
        <div class="container container-signup wow fadeInLeft" data-wow-delay=".15s">
            <h3 class="text-spacing-25 text-transform-none">FORGET PASSWORD</h3>
            {{#if error}}
            <div class="alert alert-dismissible alert-danger animate__animated animate__shakeY">
                <p>{{error}}</p>
            </div>
            {{/if}}
            <form class="rd-form was-validated" method="post">
                <div class="row row-20 gutters-20">
                    <div class="col-md-12">
                        <div class="form-wrap">
                            <input class="form-input" id="email" type="email" name="email"
                                required>
                            <label class="form-label" for="email">Email</label>
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-center mt-5">
                    <button class="button button-secondary button-winona" type="submit">Send password reset
                        email</button>
                </div>
            </form>
        </div>
        <div class="box-transform" style="background-image: url(images/bg-login.jpg);"></div>
    </div>
</section>

<!-- Javascript-->
<script src="js/core.min.js"></script>
<script src="js/script.js"></script>